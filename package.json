{
  "name": "ngx-lint-config",
  "version": "0.0.15",
  "description": "One command config ESLint & Prettier in your Angular project.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dapangmaox/ngx-lint-config.git"
  },
  "scripts": {
    "build": "tsc -p tsconfig.json && npm run bump-version",
    "bump-version": "npm version patch",
    "test": "npm run build && jasmine src/**/*_spec.js"
  },
  "keywords": [
    "schematics"
  ],
  "author": "liangxwei",
  "license": "MIT",
  "schematics": "./src/collection.json",
  "ng-add": {
    "save": false
  },
  "dependencies": {
    "@angular-devkit/core": "^18.0.0",
    "@angular-devkit/schematics": "^18.0.0",
    "@angular-eslint/schematics": "^18.0.0",
    "strip-json-comments": "^3.1.1",
    "typescript": "^5.4.5"
  },
  "devDependencies": {
    "@types/jasmine": "^5.1.4",
    "@types/node": "^20.14.2",
    "eslint-config-prettier": "^9.1.0",
    "jasmine": "^5.1.0",
    "prettier": "^3.3.2"
  }
}
